@{
    ViewData["Title"] = "Update";
}
@model ProductDto
<h1>Update Product</h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Products">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CellSerialNo"></label>
                <input asp-for="CellSerialNo" class="form-control" />
                <span asp-validation-for="CellSerialNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id"></label>
                <select asp-for="Id" asp-items="ViewBag.products" class="form-control"></select>

            </div>

            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>



    </div>


</div>